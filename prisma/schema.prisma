datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Project {
  id          Int      @id @default(autoincrement())
  title       String
  location    String
  clientName  String
  description String
  imageUrl    String
  createdAt   DateTime @default(now())
}

model Admin {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}

model Inquiry {
  id          Int      @id @default(autoincrement())
  name        String
  phone       String
  message     String
  createdAt   DateTime @default(now())
  status      String   @default("new")
}
